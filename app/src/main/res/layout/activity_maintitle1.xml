<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Maintitle1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="#F99f51"
                    app:titleEnabled="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#004b6a"
                        android:gravity="
"
                        android:orientation="horizontal">

                        <com.romainpiel.shimmer.ShimmerTextView
                            android:id="@+id/rmdankarem"
                            android:layout_width="match_parent"
                            android:layout_height="359dp"
                            android:layout_gravity="center"
                            android:background="@drawable/stars"
                            android:fontFamily="@font/jazeera"
                            android:gravity="center"
                            android:text="♥ رمضان كريم ♥"
                            android:textColor="#BEB9BA"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#004b6a"
                            android:scaleType="fitXY"
                            android:src="@drawable/stars" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#004b6a"
                            android:scaleType="fitXY"
                            android:src="@drawable/stars" />
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        />

                </com.google.android.material.appbar.CollapsingToolbarLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="120dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:background="#004b6a"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="1"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/text1"
                                        android:fontFamily="@font/jazeera"
                                        android:layout_width="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="#2196F3"
                                        android:text="وصايا ونصائح طبيه في رمضان"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="10dp"
                                    android:background="#1f000000"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="120dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:background="#004b6a"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/number1"
                                        android:layout_width="match_parent"
                                        android:text="2"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/text2"
                                        android:fontFamily="@font/jazeera"
                                        android:layout_width="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="#2196F3"
                                        android:text="طقوس رمضانيه"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="10dp"
                                    android:background="#1f000000"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="120dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:background="#004b6a"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/number"
                                        android:layout_width="match_parent"
                                        android:text="3"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/text3"
                                        android:layout_width="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:fontFamily="@font/jazeera"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="#2196F3"
                                        android:text="دعاء اليوم في شهر رمضان"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="10dp"
                                    android:background="#1f000000"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardUseCompatPadding="true"
                            android:id="@+id/card4"
                            app:cardElevation="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="120dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:background="#004b6a"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="4"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                    <TextView
                                        android:id="@+id/text4"
                                        android:layout_width="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/jazeera"
                                        android:textSize="18sp"
                                        android:textColor="#2196F3"
                                        android:text="أحكام رمضانيه في الشهر الكريم"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="10dp"
                                    android:background="#1f000000"
                                    android:layout_height="match_parent"
                                    tools:ignore="Suspicious0dp">
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </androidx.core.widget.NestedScrollView>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>




</LinearLayout>
