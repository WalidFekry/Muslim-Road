<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context="com.walid.MuslimRoad.About">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_myapp"/>


    <!-- About Text -->
    <androidx.cardview.widget.CardView
        android:id="@+id/aboutCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:fontFamily="@font/jazeera"
            android:gravity="center"
            android:text="هذا التطبيق إصدار مجاني لمساعدتك في شهر رمضان، ويحتوي على أذكار وأدوات رمضانية لإدارة وقتك، مع أذكار الصباح والمساء بدون إنترنت."
            android:textColor="#052250"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>

    <!-- Actions -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/aboutCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gmail -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:materialIcon="gmail"
                        app:materialIconColor="#015585"
                        app:materialIconSize="32dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/em"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/jazeera"
                        android:text="ارسل لنا اقتراحك لتطوير التطبيق"
                        android:textColor="#015585"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Facebook -->
            <androidx.cardview.widget.CardView
                android:id="@+id/facebooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:materialIcon="facebook_box"
                        app:materialIconColor="#015585"
                        app:materialIconSize="32dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fb"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/jazeera"
                        android:text="تواصل مع مبرمج التطبيق"
                        android:textColor="#015585"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Share -->
            <androidx.cardview.widget.CardView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:materialIcon="share_variant"
                        app:materialIconColor="#015585"
                        app:materialIconSize="32dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sh"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/jazeera"
                        android:text="شارك التطبيق مع الأصدقاء"
                        android:textColor="#015585"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Rate -->
            <androidx.cardview.widget.CardView
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:materialIcon="star"
                        app:materialIconColor="#FBC02D"
                        app:materialIconSize="32dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ra"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/jazeera"
                        android:text="ادعمنا بتقييمك للتطبيق"
                        android:textColor="#015585"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Google Play -->
            <androidx.cardview.widget.CardView
                android:id="@+id/googleplays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:materialIcon="google_play"
                        app:materialIconColor="#015585"
                        app:materialIconSize="32dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gooo"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/jazeera"
                        android:text="المزيد من التطبيقات المجانية"
                        android:textColor="#015585"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
